<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Authentication_Page">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/small_honeycomb"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:contentDescription="@string/description"
            app:srcCompat="@drawable/ic_nicubunu_honey"
            tools:ignore="ImageContrastCheck" />

        <TextView
            android:id="@+id/center_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="@string/title"
            android:textColor="@color/dark_orange"
            android:textSize="60sp" />

        <ImageView
            android:id="@+id/bee"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:contentDescription="@string/animatedBee"
            app:srcCompat="@drawable/ic_biene" />
    </LinearLayout>

    <ImageView
        android:id="@+id/bottomImage"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:contentDescription="@string/description"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/colored_image"
        tools:ignore="ImageContrastCheck" />

    <ImageView
        android:id="@+id/backWave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:contentDescription="@string/wave"
        app:layout_constraintBottom_toTopOf="@+id/bottomImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_wave__1_"
        tools:ignore="ImageContrastCheck" />

    <ImageView
        android:id="@+id/upperWave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:contentDescription="@string/wave"
        android:cropToPadding="false"
        app:layout_constraintBottom_toTopOf="@+id/bottomImage"
        app:layout_constraintEnd_toEndOf="@+id/backWave"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_wave"
        tools:ignore="ImageContrastCheck" />

    <Button
        android:id="@+id/signUpButton"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="200dp"
        android:text="@string/getStarted"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/loginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/log_in"
        android:textColor="@color/icy_white"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signUpButton"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/phrase"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="100dp"
        android:gravity="center"
        android:text="@string/style_phrase"
        android:textColor="@color/black"
        android:textSize="48sp"
        app:layout_constraintBottom_toTopOf="@+id/backWave"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>