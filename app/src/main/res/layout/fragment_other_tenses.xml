<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bee_fly">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/information_buttons"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/infinitive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/dark_yellow"
            android:gravity="start"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:text="@string/infinitive"
            android:textColor="@color/text_gray"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/infinitiveView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/i"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/information_buttons"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <TextView
            android:id="@+id/gerund"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/dark_yellow"
            android:gravity="start"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:text="@string/gerund"
            android:textColor="@color/text_gray"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/gerundView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/i"
            android:textSize="24sp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/information_buttons"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

        <TextView
            android:id="@+id/participle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/dark_yellow"
            android:gravity="start"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:text="@string/participle"
            android:textColor="@color/text_gray"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/participleView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/i"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/information_buttons"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4">

        <TextView
            android:id="@+id/imperative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/dark_yellow"
            android:gravity="start"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:text="@string/imperative"
            android:textColor="@color/text_gray"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/imperativeViewYou"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/i"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/imperativeViewWe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/i"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/imperativeViewYouPlural"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/i"
            android:textSize="24sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>