<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.company.verbzz_app">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Verbzz_App"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".Activities.LanguagePractice"
            android:exported="false" />
        <activity
            android:name=".Activities.GradedPractice"
            android:exported="false" />
        <activity
            android:name=".Activities.Select_Language_Drawer"
            android:exported="false" />
        <activity
            android:name=".Activities.Conjugate_Activity"
            android:exported="false" />
        <activity
            android:name=".Activities.Opening_Page"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.Authentication_Page"
            android:exported="true" />
        <activity
            android:name=".Activities.Sign_Up_Activity"
            android:exported="true"
            android:parentActivityName=".Activities.Login_Activity" />
        <activity
            android:name=".Activities.Login_Activity"
            android:exported="true" />
        <activity
            android:name=".Activities.Forgot_Password"
            android:exported="true"
            android:parentActivityName=".Activities.Login_Activity" />
        <activity
            android:name=".Activities.MainActivity"
            android:exported="true" />
    </application>

</manifest>